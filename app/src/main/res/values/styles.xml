<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextStyle">@style/ActionBarColor</item>
    </style>

    <style name="ActionBarColor" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarNoFullScreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextView.TitleLarge">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextView.TitleLargeNoBold">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView.TitleLargeBoldSizeStandard">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextView.TitleSlow">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGradientGrey</item>
    </style>

    <style name="TextView.TitleSlowSmall">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorGradientGrey</item>
    </style>

    <style name="TextView.TitleLow">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView.Description">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.FontBlue">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorFontBlue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView.FontGrey">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorFontGrey</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
